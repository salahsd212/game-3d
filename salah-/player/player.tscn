[sub_resource type="GDScript" id="GDScript_kqu6x"]
script/source = "extends Node3D

@export var mouse_sensitivity: float = 0.2
@export var max_look_angle: float = 85.0

var rotation_x: float = 0.0
var player: Node3D

func _ready() -> void:
	player = get_parent()  # Player (CharacterBody3D)


func _input(event: InputEvent) -> void:
	if event is InputEventMouseMotion:
		# Rotate player body (yaw)
		player.rotate_y(-event.relative.x * mouse_sensitivity * 0.01)

		# Rotate head (pitch)
		rotation_x -= event.relative.y * mouse_sensitivity
		rotation_x = clamp(rotation_x, -max_look_angle, max_look_angle)
		rotation_degrees.x = rotation_x
"

